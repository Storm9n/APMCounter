<Window x:Class="APMCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:viewmodel="clr-namespace:APMCounter.ViewModel"
        mc:Ignorable="d" WindowStyle="None"
        Title="MainWindow" Height="40" Width="60">
    <Window.DataContext >
        <viewmodel:ApmViewModel/>
    </Window.DataContext>
    <Grid Margin="1,1,1,1" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock  x:Name="ApmTextBlock" Text="{Binding Apm}" FontSize="12" FontWeight="Bold" Background="GhostWhite" TextAlignment="Center" Grid.RowSpan="2"></TextBlock>
    </Grid>
</Window>
